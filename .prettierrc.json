{
   "semi": true,
   "bracketSpacing": false,
   "singleAttributePerLine": false,
   "bracketSameLine": true,
   "printWidth": 120,
   "endOfLine": "auto",
   "tabWidth": 3,
   "overrides": [
      {
         "files": "*.scss",
         "options": {
            "printWidth": 85,
            "tabWidth": 3
         }
      },
      {
         "files": "*.css",
         "options": {
            "printWidth": 85,
            "tabWidth": 3
         }
      },
      {
         "files": "*.html",
         "options": {
            "printWidth": 100,
            "tabWidth": 3
         }
      }
   ]
}
